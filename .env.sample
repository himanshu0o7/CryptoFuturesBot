# CryptoFuturesBot Environment Variables
# Copy this file to .env and fill in your actual values

# Coinswitch API Configuration
COINSWITCH_API_KEY=your_coinswitch_api_key_here
COINSWITCH_API_SECRET=your_coinswitch_api_secret_here
COINSWITCH_BASE_URL=https://api.coinswitch.co

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Google/Gemini API Configuration (for AI features)
GOOGLE_API_KEY=your_google_api_key_here

# Trading Configuration
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_QUANTITY=10
RISK_PER_TRADE=0.01
MAX_POSITION_SIZE=1000
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.04

# Bot Configuration
DRY_RUN=true
LOG_LEVEL=INFO
TIMEZONE=UTC

# Database Configuration (optional)
DATABASE_URL=sqlite:///cryptobot.db

# Additional Configuration
ENABLE_TELEGRAM_ALERTS=true
ENABLE_LOGGING=true
LOG_FILE_PATH=logs/cryptobot.log