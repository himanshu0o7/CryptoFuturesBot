# CryptoFuturesBot Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# COINSWITCH API CONFIGURATION
# =============================================================================
# Your CoinSwitch API key - REQUIRED for all trading operations
# Get your API key from: https://api.coinswitch.co/
COINSWITCH_API_KEY=your_api_key_here

# CoinSwitch API base URL (usually no need to change)
COINSWITCH_API_BASE_URL=https://api.coinswitch.co

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Default trading mode (Paper/Live)
DEFAULT_TRADING_MODE=Paper

# Default trading symbols
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_DEPOSIT_COIN=btc
DEFAULT_DESTINATION_COIN=eth

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
# Streamlit dashboard configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=localhost

# =============================================================================
# FILE PATHS
# =============================================================================
# Paths to trading log files (relative to project root)
ORDERS_LOG_PATH=orders_log.json
SIGNALS_LOG_PATH=signal_generator.json

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================
# Telegram bot configuration (for alerts)
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

# OpenAI API key (for AI features)
# OPENAI_API_KEY=your_openai_key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Debug mode (set to True for development)
DEBUG=False

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO